{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}


        <div class="input-group">
    <input type="text" class="input--style-3" placeholder="username" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>
    <div class="input-group">

    <input type="password" class="input--style-3" placeholder="password" id="password" name="_password" required="required" autocomplete="current-password" />
    </div>
    <div class="custom-control custom-checkbox">
    <input type="checkbox" class="custom-control-input"  checked id="remember_me" name="_remember_me" value="on"/>
    <label class="text-white" for="remember_me" Default checked >{{ 'security.login.remember_me'|trans }}</label>
    </div>
    <div class="p-t-10">
    <input type="submit" class="btn btn--pill btn--green" id="_submit" name="_submit"  href="{{ path('vetementfemme_index') }} value="{{ 'security.login.submit'|trans }}" />
    </div>
</form>
